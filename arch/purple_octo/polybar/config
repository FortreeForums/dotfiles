[module/update]
type = custom/script
exec = ~/.config/polybar/arch-update.sh --display
; exec-if = wget -q --spider http://google.com
exec-if = ping -q -c1 -l1 8.8.8.8 >/dev/null
; 10 minutes
interval = 600

format = Ôë™ <label>
format-padding = 1
format-background = ${colors.secondary}
format-foreground = ${colors.tertiary}
; Trigger update
click-right = ~/.config/polybar/arch-update.sh --update

[module/date]
type = internal/date
interval = 1.0
format = <label>
format-prefix = "..:: "
format-suffix = " ::.."
label-foreground = #FFFFFF 
format-prefix-foreground = ${xrdb:color5}
format-suffix-foreground = ${xrdb:color5}
format-padding = 25
label = %date%%time%
label-font = 0

time = %H:%M
time-alt =
date =
date-alt = %d/%m/%Y

[module/updates]
type = custom/script
interval = 10
format = <label>
format-prefix = "‚ö† "
format-prefix-foreground = ${xrdb:color2}
format-padding = 1
exec = ~/scripts/update

[module/email]
type = custom/script
